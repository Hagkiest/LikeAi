{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        },
        {
            "src": "*.html",
            "use": "@vercel/static"
        },
        {
            "src": "*.js",
            "use": "@vercel/static"
        },
        {
            "src": "*.css",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index.py"
        },
        {
            "src": "/",
            "dest": "/index.html"
        },
        {
            "src": "/login",
            "dest": "/login.html"
        },
        {
            "src": "/register",
            "dest": "/register.html"
        },
        {
            "src": "/forgot-password",
            "dest": "/forgot-password.html"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ],
    "env": {
        "RESEND_API_KEY": "re_PzhTamUX_CpjABTwYaLpMs43oZX2mfuR3",
        "DATABASE_URL": "postgresql://neondb_owner:JOZv4B3iPYuF@ep-soft-cloud-a1tydbjr.ap-southeast-1.aws.neon.tech/neondb?sslmode=require"
    }
} 